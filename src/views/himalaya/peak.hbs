<h1 class="center-header">{{peakData.peak_name}}</h1>
<p><b>Height:</b> {{peakData.height_m}} m / {{peakData.height_ft}} ft<br>
<b>Host countries:</b> {{peakData.host_contries}}<br>
<b>Location:</b> {{peakData.location}}, {{peakData.region}} region<br>
<b>Region:</b> {{peakData.region}}<br>
{{#if climbStatus}}
    <b>Climb status:</b>✔️ {{peakData.climb_status}}<br>
    <b>Date of first ascent:</b> {{peakData.first_asc_date}} {{peakData.first_asc_yr}} ({{peakData.first_asc_season}})<br>
    <b>First summiters:</b> {{peakData.first_summiters}}<br>
{{else}}
    <b>Climb status:</b>❌ {{peakData.climb_status}}<br>
{{/if}}
</p>

{{#if deathsFound}}
<canvas id="myChart" width="100%" height="32px"></canvas>

<script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script type="module">
    //import Chart from 'chart.js'
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [{{deathYearsStr}}],
            datasets: [{
                label: '# of Votes',
                data: [{{deathAmountsStr}}],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    })
</script>
{{/if}}

