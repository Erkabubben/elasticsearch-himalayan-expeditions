<h1 class="center-header">{{peakData.peak_name}}</h1>

<p><b>Height:</b> {{peakData.height_m}} m / {{peakData.height_ft}} ft<br>
<br>
<b>Host countries:</b> {{peakData.host_contries}}<br>
<b>Location:</b> {{peakData.location}}, {{peakData.region}} region<br>
<b>Region:</b> {{peakData.region}}<br>
<br>
{{#if climbStatus}}
    <b>Climb status:</b>✔️ {{peakData.climb_status}}<br>
    <b>Date of first ascent:</b> {{peakData.first_asc_date}} {{peakData.first_asc_yr}} ({{peakData.first_asc_season}})<br>
    <b>First summiters:</b> {{peakData.first_summiters}}<br>
{{else}}
    <b>Climb status:</b>❌ {{peakData.climb_status}}<br>
{{/if}}
</p>

{{#if displaySummiters}}
<b>Total amount of summiters:</b> {{totalSummiters}}<br>
<canvas id="summitersChart" width="100%" height="32px"></canvas>
<script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script type="module">
    const ctx = document.getElementById('summitersChart').getContext('2d');
    const summitersChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [{{years}}],
            datasets: [{
                label: '# of summiters',
                data: [{{summiterAmounts}}],
                fill: false,
                borderColor: 
                    'rgba(92, 122, 159, 1)',
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            legend: {
                display: false
            },
        }
    })
</script>
{{/if}}
<br>

<b>Total amount of deaths:</b> {{totalDeaths}}<br>
{{#if displayDeaths}}
<canvas id="deathsChart" width="100%" height="32px"></canvas>
<script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script type="module">
    const ctx = document.getElementById('deathsChart').getContext('2d');
    const deathsChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [{{years}}],
            datasets: [{
                label: '# of deaths',
                data: [{{deathAmounts}}],
                fill: false,
                borderColor: 
                    'rgba(125, 36, 36, 1)',
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            legend: {
                display: false
            },
        }
    })
</script>
{{/if}}
